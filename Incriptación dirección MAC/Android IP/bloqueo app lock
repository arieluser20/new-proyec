import tkinter as tk
from tkinter import messagebox

class IPBlockerApp:
    def __init__(self, root):
        self.root = root
        root.title("Bloqueo de Dirección IP")
        self.bloqueadas = set()

        tk.Label(root, text="Dirección IP:").pack(pady=5)
        self.entry_ip = tk.Entry(root, width=20)
        self.entry_ip.pack(pady=5)

        tk.Button(root, text="Bloquear IP", command=self.bloquear_ip).pack(pady=5)
        tk.Button(root, text="Intentar Acceso", command=self.intentar_acceso).pack(pady=5)

        self.status = tk.Label(root, text="", fg="red")
        self.status.pack(pady=10)

    def bloquear_ip(self):
        ip = self.entry_ip.get().strip()
        if ip:
            self.bloqueadas.add(ip)
            self.status.config(text=f"IP {ip} bloqueada.")

    def intentar_acceso(self):
        ip = self.entry_ip.get().strip()
        if ip in self.bloqueadas:
            messagebox.showerror("Acceso Denegado", f"La IP {ip} está bloqueada.")
        else:
            messagebox.showinfo("Acceso Permitido", f"La IP {ip} puede acceder.")

if __name__ == "__main__":
    root = tk.Tk()
